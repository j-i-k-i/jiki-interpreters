#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# Run formatter
echo "💅 Formatting code..."
bun run format

# Run type check
echo "🔍 Type checking..."
bun run typecheck
if [ $? -ne 0 ]; then
    echo "❌ Type check failed. Commit aborted."
    exit 1
fi

# Run tests
echo "🧪 Running tests..."
bun test
if [ $? -ne 0 ]; then
    echo "❌ Tests failed. Commit aborted."
    exit 1
fi

echo "✅ All checks passed!"
