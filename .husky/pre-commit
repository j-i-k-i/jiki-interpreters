echo "Running pre-commit checks..."

# Run formatter on changed files only
echo "ğŸ’… Formatting changed files..."
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx|json|md)$' || true)
if [ -n "$STAGED_FILES" ]; then
    echo "Formatting: $STAGED_FILES"
    npx prettier --write $STAGED_FILES
    git add $STAGED_FILES
else
    echo "No files to format"
fi

# Run type check
echo "ğŸ” Type checking..."
bun run typecheck
if [ $? -ne 0 ]; then
    echo "âŒ Type check failed. Commit aborted."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
bun test
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Commit aborted."
    exit 1
fi

echo "âœ… All checks passed!"
