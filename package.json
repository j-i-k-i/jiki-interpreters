{
  "name": "jikiscript",
  "version": "1.0.0",
  "description": "JikiScript language implementation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "jikiscript",
    "language",
    "interpreter"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/didyoumean": "^1.2.3",
    "@types/lodash": "^4.17.20",
    "@types/lodash.clonedeep": "^4.5.9",
    "bun-types": "^1.2.21",
    "husky": "^9.1.7",
    "marked": "^16.2.1",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "i18next": "^25.5.0",
    "lodash": "^4.17.21",
    "lodash.clonedeep": "^4.5.0",
    "string-similarity-js": "^2.1.4"
  }
}
